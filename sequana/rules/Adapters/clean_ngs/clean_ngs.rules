rule clean_ngs:
    input:
        __clean_ngs__input
    log:
        __clean_ngs__logs
    output:
        __clean_ngs__output
    params:
        adapters = config['clean_ngs']['adapters'],
        MinLen = __clean_ngs__MinLen,
        MaxLen = __clean_ngs__MaxLen,
        qual3Thresh = __clean_ngs__qual3Thresh,
        qual5Thresh = __clean_ngs__qual5Thresh,
        rejFiles = __clean_ngs__rejFiles
    shell:
        """
        clean_ngs {input} \
           {output} \
           {rejFiles} \
           -adf {params.adapters} \
           -l   {MinLen}\
           -L   {MaxLen} \
           -q3  {qual3Thresh} \
           -q5  {qual5Thresh} > {log}
        """