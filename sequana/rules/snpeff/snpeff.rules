rule snpeff:
    """ Snpeff adds annotation of variants detected in a VCF file. 

    Required input:
        __snpeff__input: vcf file

    Required output:
        __snpeff__output: vcf file

    Required parameters:
        config["snpeff"]["reference"]: genbank file
        config["snpeff"]["options"]: result filters options 

    Contributors:
        Sequana consortium
    """
    input:
        vcf = __snpeff__input, 
        ann = config["snpeff"]["reference"]
    output:
        ann = __snpeff__output
    log:
        build_err = "logs/snpeff/snpeff_build.err",
        build_out = "logs/snpeff/snpeff_build.out",
        launch = "logs/snpeff/snpeff_launch.err"
    params:
        options = config["snpeff"]["options"]
    run:
        from sequana import SnpEff


        mydata = SnpEff(reference=input.ann, 
            stdout=log.build_out, stderr=log.build_err)
        mydata.launch_snpeff(input.vcf, output.ann, log.launch, 
            options=params.options)
