rule bedtools_genomecov:
    input:
        cfg.PROJECT + "/bwa_mem/%s.sorted.bam" % cfg.PROJECT
    output:
        cfg.PROJECT + "/genomecov/%s.bed" % cfg.PROJECT
    params:
        kargs = config["bedtools"]
    shell:
        """
        bedtools genomecov {params.kargs} -ibam {input} > {output}
        """
