rule bedtools_genomecov:
    input:
        config["output"] + "/bwa_mem/" + config["output"] + ".sorted.bam"
    output:
        config["output"] + "/genomecov/" + config["output"] + ".bed"
    params:
        kargs = config["bedtools"]
    shell:
        """
        bedtools genomecov {params.kargs} -ibam {input} > {output}
        """
