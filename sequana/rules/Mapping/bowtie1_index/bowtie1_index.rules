rule bowtie1_index:
    input:
        __bowtie1_index__fasta,
        __bowtie1_index__prefix
    output:
        __bowtie1_index__output
    log:
        __bowtie1_index__log
    shell:
        """
        bowtie-build {input.fasta} {input.prefix}  2> {log}
        samtools faidx {input} 2>> {log}
        ln -s {input}.fai {input.prefix}.chrom.sizes 2>> {log}

        """
