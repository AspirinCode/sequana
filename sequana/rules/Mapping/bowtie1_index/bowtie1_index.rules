rule bowtie1_index:
    input:
        fasta = __bowtie1_index__fasta,
        prefix = __bowtie1_index__prefix
    output:
        __bowtie1_index__output
    log:
        __bowtie1_index__log
    shell:
        """
        bowtie-build {input.fasta} {input.prefix}  2> {log}
        samtools faidx {input.fasta} 2>> {log}
        ln -s {input.fasta}.fai {input.prefix}.chrom.sizes 2>> {log}

        """
