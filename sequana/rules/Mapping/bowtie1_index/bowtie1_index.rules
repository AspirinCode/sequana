rule bowtie1_index:
    input:
        fasta = __bowtie1_index__fasta
    output:
        file = __bowtie1_index__output,
        prefix = __bowtie1_index__output_prefix
    log:
        __bowtie1_index__log
    shell:
        """
        bowtie-build {input.fasta} {output.prefix}  2> {log}
        samtools faidx {input.fasta} 2>> {log}
        ln -s {input.fasta}.fai {output.prefix}.chrom.sizes 2>> {log}

        """
