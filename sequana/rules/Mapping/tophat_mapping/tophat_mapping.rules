rule tophat_mapping:
    input:
        fastq = __tophat_mapping__input
    output:
        bam = __tophat_mapping__outdir + "/accepted_hits.bam",
        sort = __tophat_mapping__sort
    params:
        outdir = __tophat_mapping__outdir,
        prefix_index = config["tophat_mapping"]["prefix_index"],
        options = config["tophat_mapping"]["options"]
    threads:
        config["tophat_mapping"]["threads"]
    shell:
        """
        tophat -p {threads} {params.options} {params.prefix_index} \
        {input.fastq} -o {params.outdir} \
        && samtools sort -o {output.sort} {output.bam}
        """
