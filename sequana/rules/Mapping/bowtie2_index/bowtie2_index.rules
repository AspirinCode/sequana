rule bowtie2_index:
    input:
        __bowtie2_index__fasta,
        __bowtie2_index__prefix
    output:
        __bowtie2_index__output
    log:
        __bowtie2_index__log
    shell:
        """
        bowtie2-build {input.fasta} {input.prefix}  2> {log}
        samtools faidx {input} 2>> {log}
        """
