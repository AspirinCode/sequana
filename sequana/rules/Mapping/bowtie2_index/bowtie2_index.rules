rule bowtie2_index:
    input:
        fasta = config["genome"]["fasta"],
        prefix = config["genome"]["name"]
    output:
        config["genome"]["name"] + ".bt2"
    log:
        __bowtie2_index__log
    shell:
        """
        bowtie2-build {input.fasta} {input.prefix}  2> {log}
        samtools faidx {input} 2>> {log}
        """
