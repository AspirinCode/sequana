rule star_index:
    input:
        __star_index__fasta
    output:
        __star_index__output,
        __star_index__output_dir
    log:
        __star_index__log
    shell:
        """
        STAR --runMode genomeGenerate --genomeFastaFiles {input.fasta} --genomeDir .
        samtools faidx {input.fasta}
        """
