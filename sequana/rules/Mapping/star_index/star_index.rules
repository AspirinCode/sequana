rule star_index:
    input:
        __star_index__fasta
    output:
        touch(__star_index__output_done)
    params:
        wkdir = __star_index__output_dir
    log:
        __star_index__log
    shell:
        """
        STAR --runMode genomeGenerate --genomeFastaFiles {input.fasta} --genomeDir {params.wkdir}
        samtools faidx {input.fasta}
        """
