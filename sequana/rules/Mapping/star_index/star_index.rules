rule star_index:
    input:
        __star_index__fasta = config["genome"]["fasta"],
        __star_index__prefix = config["genome"]["name"]
    output:
        __star_index__output = "SAindex"
    log:
        __star_index__log
    shell:
        """
        STAR --runMode genomeGenerate --genomeFastaFiles {input.fasta} --genomeDir .
        CreateSequenceDictionary R={input.fasta} O={input.prefix}.dict
        samtools faidx {input.fasta}
        """
